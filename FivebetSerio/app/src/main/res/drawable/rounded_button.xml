<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="#e1e1e1"> <!-- Definisci il colore del ripple -->

    <item>
        <shape>
            <!-- Background color -->
            <solid android:color="#f6f6f6" /> <!-- Sostituisci con il colore desiderato -->

            <!-- Border -->
            <stroke
                android:width="1dp"
                android:color="#bfbfbf" /> <!-- Sostituisci con il colore desiderato -->

            <!-- Rounded corners -->
            <corners android:radius="20dp" />
        </shape>
    </item>

</ripple>
