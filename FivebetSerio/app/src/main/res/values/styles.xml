<?xml version="1.0" encoding="utf-8"?>

<resources>
    <style name="MyCardStyle" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/card_background</item>
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">8dp</item>
        <item name="strokeWidth">0dp</item>
    </style>

    <style name="MyCustomButton" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/white</item>
        <item name="shapeAppearance">@style/MyButtonShape</item>
        <item name="android:padding">0dp</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="CustomButtonMain" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/black</item>
        <item name="shapeAppearance">@style/MyButtonShape</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="MyButtonShape" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerSize">16dp</item> <!-- Arrotonda gli angoli -->
    </style>

    <style name="CustomTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <!-- Colore del bordo di default -->
        <item name="boxStrokeColor">@color/boxStrokeColor</item>

        <!-- Colore del bordo quando è in focus (cliccato) -->

        <!-- Colore del testo dell'etichetta (hint) quando è in focus -->
        <item name="hintTextColor">@color/boxStrokeColor</item>
    </style>

</resources>